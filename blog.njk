<body class="zen blog">
  <main class="wrapper">
    <div>

      <h1>
        perspectives
      </h1>
  
      {% set sortedPosts = collections.posts | sortCollection %}
      {# 
        Need to add roles since Safari will remove semantics
        due to using `list-style-type: none` ðŸ˜¢
        #}
      <ul class="latest-perspectives" role="list">
        {% for post in sortedPosts  %}
          <li role="listitem">
            <a href="{{ post.url }}">
              <span>
                {{- post.data.title -}}
              </span>
            </a>
          </li>
        {% endfor %}
      </ul>
  
      {# <div class="all-perspectives">
        <a href="/posts/">
          all posts
        </a>
      </div> #}
    </div>
  </main>
</body>
